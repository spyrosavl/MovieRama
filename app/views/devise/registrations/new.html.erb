<h3>Sign up</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-group">
    <%= f.text_field :name, autofocus: true, class: "form-control form-control-lg", placeholder: "your name", required: true %>
  </div>
  <div class="form-group">
    <%= f.email_field :email, autofocus: false, autocomplete: "email", class: "form-control form-control-lg", placeholder: "email", required: true %>
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>
  <div class="form-group">
    <%= f.password_field :password, autocomplete: "off", class: "form-control form-control-lg", placeholder: "password", required: true %>
    <small id="emailHelp" class="form-text text-muted">(<%= @minimum_password_length %> characters minimum)</small>
  </div>
  <div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control form-control-lg", placeholder: "password confirmation", required: true %>
  </div>
  <br/>
  <button type="submit" class="btn btn-primary btn-lg float-right">Sign Up</button>

<% end %>

<%= render "devise/shared/links" %>
